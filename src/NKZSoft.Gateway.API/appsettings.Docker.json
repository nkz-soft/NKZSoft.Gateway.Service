{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System.Net.Http": "Warning"
      }
    }
  },
  "Kestrel": {
    "endpoints": {
      "http": {
        "url": "http://0.0.0.0:80"
      }
    }
  },
  "ReverseProxy": {
    "Routes": {
      "app" : {
        "ClusterId": "app",
        "AuthorizationPolicy": "CookieAuthenticationPolicy",
        "Match": {
          "Path" : "/app/{**remainder}"
        },
        "Transforms" : [
          { "PathRemovePrefix": "/app" }
        ]
      },
      "identity" : {
        "ClusterId" : "identity",
        "Match" : {
          "Path" : "/identity/{**remainder}"
        },
        "Transforms" : [
          { "PathRemovePrefix": "/identity" }
        ]
      }
    },
    "Clusters": {
      "app": {
        "Destinations": {
          "app/destination": {
            "Address": "http://data-service:80/"
          }
        }
      },
      "identity": {
        "Destinations": {
          "identity/destination": {
            "Address": "http://gateway-service:80/"
          }
        }
      }
    }
  },
  "OpenIDConnect": {
    "Authority": "http://host.docker.internal:8080/auth/realms/Test",
    "MetadataAddress" : "http://host.docker.internal:8080/auth/realms/Test/.well-known/openid-configuration",
    "ClientId": "yarn-proxy",
    "ClientSecret": "pHaEdIKaFTOuJvxTFsNezENmPYUpx9yA",
    "RedirectUrl": "http://localhost:5000"
  }
}
